<Window x:Class="ScanFlashLink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScanFlashLink - Serveur" Height="400" Width="500">
    <Grid>
        <!-- Label -->
        <TextBlock Text="Adresse IP du serveur :" FontSize="14" Margin="10,10,10,0"/>

        <!-- IP affichée en dessous -->
        <TextBlock Name="txtIpDisplay" FontSize="16" FontWeight="Bold" 
                   Margin="10,35,10,0" Foreground="DarkBlue"/>

        <!-- Label Logs -->
        <TextBlock Text="Codes Scannés :" FontSize="16" Margin="10,70,10,0"/>
        <TextBox Name="txtLogs" VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                 Margin="10,100,10,10" FontSize="14" TextWrapping="Wrap" AcceptsReturn="True"/>
    </Grid>
</Window>
